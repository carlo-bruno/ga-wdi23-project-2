<main class="container">
  <form action="/auth/signup" method="POST">
    <div class="form-group">
      <label for="authEmail">Email</label>
      <input id="authEmail" class="form-control" type="email" name="email" required />
    </div>

    <div class="form-group">
      <label for="authName">Name</label>
      <input id="authName" class="form-control" type="text" name="name" />
    </div>

    <div class="form-group">
      <label for="authName">User Name</label>
      <input id="authName" class="form-control" type="text" name="username" />
    </div>

    <div class="form-group">
      <label for="authPassword">Password</label>
      <input id="authPassword" class="form-control" type="password" name="password" />
    </div>

    <input class="btn btn-primary" type="submit" />
  </form>
</main>