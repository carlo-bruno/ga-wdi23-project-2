<!-- Poem Writer Page -->
<main class="container main">
  <form action="/poems" method="POST" class="writer-form">
    <!-- title -->
    <input type="text" name="title" placeholder="Title" /><br />
    <!-- content -->
    <textarea name="content" id="newPad" class="notepad type-font"></textarea>
    <br />
    <!-- Show publish, submit if logged in -->
    <% if(currentUser){ %>
    <div class="writer-options">
      <div class="group publish-box">
        <label for="isPublished">Publish poem?</label>
        <input type="checkbox" name="isPublished" />
      </div>

      <div class="group category-box">
        <input type="text" name="category" placeholder="Category" />

        <input type="hidden" name="userId" value="<%=currentUser.id%>" />
        <button class="create-btn" type="submit">Create!</button>
      </div>
    </div>
    <%} else { %>
    <div class="writer-options">
      <p>Sign up or Log In to save your poem</p>
    </div>
    <% } %>

  </form>

  <!-- Writer Tools -->
  <section class="tools">
    <div class="rhyme-box">
      <form id="rhymeSearch">
        <input id="rhymeInput" type="text" placeholder="Rhymes" />
        <input type="submit" value="Search" />
      </form>
      <div id="rhymeResult">
        <!--  -->
      </div>
    </div>

    <div class="synonym-box">
      <form id="synonymSearch">
        <input id="synonymInput" type="text" placeholder="Synonyms" />
        <input id="synonymBtn" type="submit" value="Search" />
      </form>
      <div id="synonymResult">
        <!--  -->
      </div>
    </div>
  </section>
</main>

<script src="/js/app.js"></script>